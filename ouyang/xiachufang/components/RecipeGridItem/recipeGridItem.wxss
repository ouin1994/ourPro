.recipe-cover-wrap {
    position: relative;
    padding-top: 58.92%;
}

.recipe-cover {
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    border-radius: 10rpx;
    background-color: #eee;
}

.recipe-action {
    position: absolute;
    right: 0rpx;
    top: 0rpx;
    width: 70rpx;
    height: 70rpx;
    background-image: url(http://i2.chuimg.com/769d2397e977487382e7b9200c27f042_120w_120h.png?imageView2/1/w/120/h/120/interlace/1/q/85);
    background-position: center;
    background-repeat: no-repeat;
    background-size: 60rpx 60rpx;
}

.recipe-detail {
    display: flex;
}

.recipe-info {
    flex: 1;
    overflow: hidden;
}

.recipe-title {
    word-break: break-all;
    font-size: 28rpx;
    font-weight: bold;
    line-height: 1.3;
    margin: 8px 0 4rpx 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-wrap: normal;
}

.recipe-stats {
    font-size: 20rpx;
    color: #95958f;
    white-space: nowrap;
    word-wrap: normal;
    overflow: hidden;
    text-overflow: ellipsis;
}