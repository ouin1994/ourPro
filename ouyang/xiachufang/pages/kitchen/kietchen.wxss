.top-menu {
    position: absolute;
    top: 0;
    left: 0;
}

.doodle {
    display: block;
    width: 206rpx;
    height: 63rpx;
    margin: 80rpx auto 80rpx auto;
    position: relative;
    padding: 2px;
}

.logo {
    display: block;
    width: 206rpx;
    height: 63rpx;
}

.custom-logo {
    display: block;
    margin: 0 auto;
    width: 750rpx;
}

.pop-hi {
    position: absolute;
    right: 0;
    top: 0;
    transform: translate3d(100%,-100%,0);
    font-size: 10px;
    background-color: #fdc426;
    color: #fff;
    padding: 2px 5px;
    border-radius: 6px 6px 6px 0;
    animation: 50s infinite pop-in;
    transform-origin: left bottom;
}

@-webkit-keyframes pop-in {
    0% {
        opacity: 0;
        transform: translate3d(100%,-100%,0) scale(0);
    }

    3% {
        opacity: 1;
        transform: translate3d(100%,-100%,0) scale(1);
    }

    30% {
        opacity: 1;
        transform: translate3d(100%,-100%,0) scale(1);
    }

    33% {
        opacity: 0;
        transform: translate3d(100%,-100%,0) scale(0);
    }

    100% {
        opacity: 0;
        transform: translate3d(100%,-100%,0) scale(0);
    }
}

@keyframes pop-in {
    0% {
        opacity: 0;
        transform: translate3d(100%,-100%,0) scale(0);
    }

    3% {
        opacity: 1;
        transform: translate3d(100%,-100%,0) scale(1);
    }

    30% {
        opacity: 1;
        transform: translate3d(100%,-100%,0) scale(1);
    }

    33% {
        opacity: 0;
        transform: translate3d(100%,-100%,0) scale(0);
    }

    100% {
        opacity: 0;
        transform: translate3d(100%,-100%,0) scale(0);
    }
}

.pop-hi::after {
    content: " ";
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 4px 6px 0 0;
    border-color: #fdc426 transparent transparent transparent;
    position: absolute;
    left: 0;
    bottom: 0;
    transform: translate3d(0,100%,0);
}

.search-box {
    height: 120rpx;
    background-color: #F3F3F3;
    border-radius: 10rpx;
    overflow: hidden;
    margin: 0 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.search-entry {
    white-space: nowrap;
    word-wrap: normal;
    font-size: 44rpx;
    color: #383831;
    font-weight: lighter;
}

.search-icon {
    display: block;
    height: 48rpx;
    width: 48rpx;
    margin-right: 10rpx;
    position: relative;
}

.quotes {
    text-align: center;
    color: #CBCBCB;
    font-size: 24rpx;
    opacity: 1;
    margin: 40rpx 0;
}

.recipe-list {
    margin-top: 100rpx;
    display: flex;
    flex-direction: row;
    padding: 0 40rpx;
}

.recipe-list-left,.recipe-list-right {
    width: 50%;
    flex: 1;
    flex-shrink: 0;
    box-sizing: border-box;
}

.recipe-list-left {
    padding-right: 15rpx;
}

.recipe-list-right {
    padding-left: 15rpx;
}

.recipe-item {
    margin-bottom: 40rpx;
}