.logo-box {
  width: 100%;
  height: 60rpx;
  text-align: center;
}

.logo {
  width: 180rpx;
  height: 100%;
}

.search-box {
  margin: auto;
  margin-top: 30rpx;
  width: 95%;
  height: 120rpx;
  background-color: #f3f3f3;
  /* text-align: center/ */
}

.search-box view {
  width: 60%;
  height: 120rpx;
  line-height: 12rpx;
  margin: auto;
  display: flex;
  align-items: center;
}

.search-plac {
  font-size: 45rpx;
  margin-left: 20rpx;
  color: #8c8c88;
}

.tips {
  text-align: center;
  color: #cbcbcb;
  font-size: 25rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.greens-box {
  display: inline-block;
  width: 45%;
  height: 350rpx;
  margin-left: 20rpx;
  margin-top: 50rpx;
}

.greens-box:nth-child(2n-1) {
  margin-right: 0;
  margin-left: 30rpx;
}

.greens-box image {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
}

.green-name {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 700;
}

.green-num {
  color: #707070;
  font-size: 27rpx;
}
